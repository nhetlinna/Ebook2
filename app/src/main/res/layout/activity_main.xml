<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout android:layout_width="match_parent" android:layout_height="900px" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintVertical_bias="0.107" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/blue1"
                   android:id="@+id/a1"
        />
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/b"
                   android:id="@+id/a2"
        />
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/bule"
                   android:id="@+id/a3"
        />
    </FrameLayout>
    <Button
            android:text="PREVIOUS SCREEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_butt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.829"
            android:onClick="prev"
    />
    <Button
            android:text="Next Screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/next_butt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/previous_butt"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.474"
            app:layout_constraintVertical_bias="0.829"
            android:onClick="next"
    />

</androidx.constraintlayout.widget.ConstraintLayout>